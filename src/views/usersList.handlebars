<div>
    <h1>Lista de Usuarios</h1>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    th, td {
        padding: 15px; /* Añade espacio interno (padding) para separar el contenido */
        text-align: left;
        border-bottom: 1px solid #ddd; /* Añade una línea para separar las filas */
    }
    th {
        background-color: #f2f2f2; /* Color de fondo para los encabezados */
    }
    tr:hover {
        background-color: #f5f5f5; /* Color de fondo al pasar el ratón sobre una fila */
    }
</style>

<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.role}}</td>
            </tr>
        {{else}}
            <tr>
                <td colspan="3">No hay usuarios disponibles</td>
            </tr>
        {{/each}}
    </tbody>
</table>
</div>