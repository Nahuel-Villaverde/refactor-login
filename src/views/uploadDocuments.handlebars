<form id="uploadForm" action="/api/users/{{userId}}/profile-image" method="POST" enctype="multipart/form-data">
    <label for="profileImage">Subir Imagen de Perfil:</label>
    <input type="file" name="profileImage" id="profileImage" required>
    <button type="submit">Subir Imagen de Perfil</button>
</form>

<form id="uploadProductForm" action="/api/users/{{userId}}/product-image" method="POST" enctype="multipart/form-data">
    <label for="productImage">Subir Imagen de Producto:</label>
    <input type="file" name="productImage" id="productImage" required>
    <button type="submit">Subir Imagen de Producto</button>
</form>

<form id="uploadDocumentForm" action="/api/users/{{userId}}/document" method="POST" enctype="multipart/form-data">
    <label for="document">Subir Documento:</label>
    <input type="file" name="document" id="document" required>
    <button type="submit">Subir Documento</button>
</form>

